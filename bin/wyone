################
# CONFIGURATION
################

DIR=`dirname "$0"`/..
LIBDIR=$DIR/lib

# check for running under cywin
cygwin=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
esac

##################
# RUN APPLICATION
##################

if $cygwin; then
    # under cygwin the classpath separator must be ";"
    LIBDIR=`cygpath -pw "$LIBDIR"`
    WHILEY_CLASSPATH="$LIBDIR/wyjc.jar;$CLASSPATH"
else
    # under UNIX the classpath separator must be ":"
    WHILEY_CLASSPATH="$LIBDIR/wyjc.jar:$CLASSPATH"
fi

java -server -Xmx128M -cp "$WHILEY_CLASSPATH" wyone.Main "$@"
